<Window x:Class="Factory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory"
        mc:Ignorable="d"
        Title="MainWindow" Height="330.5" Width="501">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBox"></ListBox>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Margin="3" Click="Button_Click">Информация</Button>
            <Button Margin="3" Click="Button_Click_1">Купить</Button>
        </StackPanel>
        
    </Grid>
</Window>
